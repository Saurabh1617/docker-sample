pipeline {
  agent none
  stages {
    stage('Docker Build') {
      
      node('jenkins') steps {
        sh 'sudo docker build -t vikson36/bb-app:${BUILD_NUMBER} ${WORKSPACE}/bulletin-board-app'
      }
    }
	stage('Docker Push') {
     
      node('jenkins') steps {
        sh 'sudo docker push vikson36/bb-app:${BUILD_NUMBER}'
      }
    }
	
	  }
}
